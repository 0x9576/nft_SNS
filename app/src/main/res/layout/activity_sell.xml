<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="NFT Sell"
            android:textAlignment="center"
            android:textColor="@color/point"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginRight="30dp"
            android:text="\?"
            android:textAlignment="center"
            android:textColor="#85000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/img_SellActivity"
        android:layout_width="match_parent"
        android:layout_height="244dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp">
    <EditText
        android:id="@+id/detail_SellActivity"
        android:hint="제목을 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5" />

    <EditText
        android:id="@+id/price_SellActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="KLAY의 가격을 입력해주세요."
        android:inputType="numberDecimal"
        android:maxLines="1" />

    <EditText
        android:id="@+id/price_SellActivityToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NFC의 가격을 입력해주세요."
        android:inputType="numberDecimal"
        android:maxLines="1" />

    <EditText
        android:id="@+id/tokenIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="토큰 ID를 입력해주세요."
        android:maxLines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/bt_SellActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15sp"
            android:text="게시하기"
            android:textColor="@color/white"
            android:backgroundTint="@color/point"
            />
    </LinearLayout>
    </LinearLayout>


</LinearLayout>