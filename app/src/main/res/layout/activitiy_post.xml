<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_PostActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="이미지를 넣어주세요."
        app:srcCompat="@drawable/imageaddition" />

    <EditText
        android:id="@+id/detail_PostActivity"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:hint="게시글을 입력해주세요."
        android:maxLines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ToggleButton
            android:id="@+id/tokenToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15sp"
            android:backgroundTint="@color/white"
            android:textOff="토큰해제"
            android:textOn="토큰모드" />
        <Button
            android:id="@+id/bt_PostActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15sp"
            android:text="게시하기"
            android:textColor="@color/white"
            android:backgroundTint="@color/point"
            />
    </LinearLayout>


</LinearLayout>