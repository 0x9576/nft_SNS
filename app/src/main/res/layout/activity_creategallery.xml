<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topTextView2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="갤러리 생성"
            android:textAlignment="center"
            android:textColor="@color/point"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/galleryImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/imageaddition"
            android:layout_marginVertical="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">
        <EditText
            android:id="@+id/galleryNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="갤러리명"
            android:inputType="textPersonName" />

        <!--<CheckBox
            android:id="@+id/ticketCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입장권 발행여부" />-->

        <EditText
            android:id="@+id/ticketEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="입장권 가격을 입력해주세요.(Klay)"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/generateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/point"
            android:textColor="@color/white"
            android:text="생성하기" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>